<script>
let page = 1;
let gift = "";
let datePlan = "";
let msgType = "";
let chosenDate = "";

function nextPage() {
    document.getElementById("p" + page).classList.remove("active");
    page++;
    document.getElementById("p" + page).classList.add("active");

    if(page === 8){
        document.getElementById("finalGift").innerHTML = gift;
        document.getElementById("finalPlan").innerHTML = datePlan;
        document.getElementById("finalMsg").innerHTML = msgType;
        document.getElementById("finalDate").innerHTML = chosenDate;

        document.getElementById("finalMessage").innerHTML =
        `Zara, you chose ${gift}, a ${datePlan}, a ${msgType} message, and the date ${chosenDate}. 
        And honestly, whatever you choose always becomes beautiful because *you* chose it. ğŸ’—`;
    }
}

function pick(t){ document.getElementById("out1").innerHTML = t; }
function pick2(t){ document.getElementById("out2").innerHTML = t; }

function showMsg(type) {
    let t="";
    if(type==="cute") t="Zara, your cute nature makes my whole day sweet and soft. ğŸ’•";
    if(type==="romantic") t="Zaraâ€¦ you came quietly into my life and became the most beautiful part of it. â¤ï¸";
    if(type==="emotional") t="You bring peace, trust and stability into my heart. ğŸ˜¢";
    if(type==="naughty") t="Youâ€™re my sweet trouble, Zara. ğŸ”¥ğŸ˜Œ";
    document.getElementById("msgOutput").innerHTML=t;
}

function saveDate(){
    let d=document.getElementById("selectedDate").value;
    if(d===""){
        document.getElementById("dateOutput").innerHTML = "âš ï¸ Please select a date.";
        return;
    }
    chosenDate=d;
    document.getElementById("dateOutput").innerHTML="ğŸ“Œ Selected Date: <b>"+d+"</b>";
}

function openEnvelope(){
    document.getElementById("letter").innerHTML="You are my heart, Zara ğŸ’—";
}

function showSecret(){ document.getElementById("secret").style.display="block"; }
function hideSecret(){ document.getElementById("secret").style.display="none"; }

/* HEART ANIMATION */
setInterval(()=>{
    let h=document.createElement("div");
    h.className="heart";
    h.innerHTML="ğŸ’—";
    h.style.left=Math.random()*100+"vw";
    h.style.fontSize=(18+Math.random()*20)+"px";
    h.style.animationDuration=(4+Math.random()*3)+"s";
    document.body.appendChild(h);
    setTimeout(()=>h.remove(),6000);
},300);
</script>

